def comprar_entrada():
  print("---------------------------")
  entradas=int(input("Cuantas entradas desea comprar se pueden comprar de 1 a 3 por cliente: "))
  if entradas <= 0 or entradas >= 4:
    print("solo puede comprar de 1 a 3 entradas")
  else:
    pantalla()

def pantalla():
  for i, estado in enumerate(entradas):
        if estado == "":
            print(i + 1, end="\t")
        else:
            print("X", end="\t")
        if (i + 1) % 10 == 0:
            print()

